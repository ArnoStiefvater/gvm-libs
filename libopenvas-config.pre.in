PREFIX=@prefix@
LIBDIR=$PREFIX/lib
INCLUDEDIR=$PREFIX/include
DEFS="@syspcap@"
VERSION=@version@
CIPHER="%CIPHER_LDFLAGS%"
CIPHER_CFLAGS="%CIPHER_CFLAGS%"
EXTRA="@EXTRA@ @llib@"
EGDPATH="@egdpath@"


usage()
{
 echo "Usage : libopenvas-config [ --cflags | --libs | --version | --egd ]"
 exit $1
}


test $# -gt 0 || usage 1


# check whether we have echo -n, depending
# on the current shell, used
case `echo -n` in
\-n)	Xn=   ; Xc='\c' ;;
*)	Xn=-n ; Xc=
esac

while test $# -gt 0; do
 case "$1" in
	--version)
		echo $VERSION
		exit 0
		;;
	--libs)
	
		echo $Xn "-L$LIBDIR -lopenvas -lhosts_gatherer @pcap_flag@ $CIPHER $EXTRA $Xc"
		;;
	--cflags)
		echo $Xn "$DEFS -I$INCLUDEDIR/openvas $CIPHER_CFLAGS $Xc"
		;;
	--egd)
		echo $Xn "$EGDPATH" $Xc
		;;
	--help | -h)
		usage 0
		;;
	*)
		usage 1
		;;
 esac
 shift
done

echo
